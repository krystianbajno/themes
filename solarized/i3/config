# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
# Sreen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id  ~/.config/scripts/backlight +2
# increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id  ~/.config/scripts/backlight -1
bindsym $mod+XF86MonBrightnessUp exec --no-startup-id  redshift -x  && notify-send --urgency low "Redshift filter off"
bindsym $mod+XF86MonBrightnessDown exec --no-startup-id  redshift -ro && notify-send --urgency low "Redshift filter on"

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer set Master -q 5%+ 
bindsym XF86AudioLowerVolume exec --no-startup-id amixer set Master -q 5%- 
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioMute exec --no-startup-id amixer set Master toggle
bindsym $mod+XF86AudioMute exec --no-startup-id pavucontrol

bindsym Shift+XF86AudioMute exec urxvt -e $SHELL -c 'vlc -I ncurses /home/krystian/music/playlist.m3u'

bindsym $mod+Print exec --no-startup-id  /usr/bin/aplay -q -D default /usr/share/sounds/freedesktop/./stereo/screen-capture.wav && xfce4-screenshooter -f -s /home/krystian/pics/screenshots/
bindsym Print exec --no-startup-id  /usr/bin/aplay -q -D default /usr/share/sounds/freedesktop/./stereo/screen-capture.wav && xfce4-screenshooter -r -s /home/krystian/pics/screenshots/
