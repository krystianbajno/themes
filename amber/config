bindsym $mod+XF86MonBrightnessDown exec --no-startup-id  redshift -ro && notify-send --urgency low "Redshift filter on"
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer set Master -q 5%+ #&& exec pkill -SIGRTMIN+1 i3blocks #increase sound volume & 
bindsym XF86AudioLowerVolume exec --no-startup-id amixer set Master -q 5%- #&& exec pkill -SIGRTMIN+1 i3blocks #decrease sound volume
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
